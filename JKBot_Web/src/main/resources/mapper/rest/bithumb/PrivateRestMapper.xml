<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="jk.framework.test.mapper.TestMapper">
	<select id="findByBno2" parameterType="Integer" resultType="TestEntity">
		SELECT * FROM BOARD WHERE bno = #{bno}
	</select>
	
	<select id="findAll" resultType="TestEntity">
		SELECT * 
		FROM BOARD 
	</select>
	
	<insert id="save" parameterType="TestEntity">
		<!--  작업해야 함 -->
		INSERT INTO test_book_backup(bookID, bookName, originPrice, registDate)
		VALUES
		<foreach item="testBook" index="index" collection="list" open="" separator="," close="">
			(#{testBook.bookID}, #{testBook.bookName}, #{testBook.originPrice}, NOW())
		</foreach>	
		
		INTO BOARD (
			bno
			,userName
			,contents
		) VALUES (
			#{bno}
			,#{userName}
			,#{contents}
		)
	</insert>
	
	<select id="findOne" parameterType="TestEntity" resultType="TestEntity">
		SELECT * 
		FROM BOARD 
		WHERE bno = #{bno}
		limit 1
	</select>
	
	<delete id="delete" parameterType="TestEntity">
		DELETE * 
		FROM BOARD 
		WHERE bno = #{bno}
	</delete>
</mapper>
